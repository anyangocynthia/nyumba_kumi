<header class="header">
    <a href="<%= root_path %>" class="logo">
      <i class="fa fa-home"></i> Ujirani App
    </a>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top" role="navigation">
      <!-- Sidebar toggle button-->
      <a href="#" class="navbar-btn sidebar-toggle" data-target="#atas" data-toggle="offcanvas" role="button">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <div class="collapse navbar-collapse" id="atas">
        <div class="navbar-left">
          <ul class="nav navbar-nav">
            <li class="dropdown tasks-menu">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-bell"></i>
                <span class="label label-danger" id="incident-count"><%= Incident.where(viewed: false).count %></span>
              </a>
              <ul class="dropdown-menu">
                <li class="header">You have <%= Incident.where(viewed: false).count %> new incidents</li>
                <li>
                  <!-- inner menu: contains the actual data -->
                  <ul class="menu">
                    <% Incident.where(viewed: false).each do |incident| %>
                      <li><!-- Task item -->
                        <a href="<%= incident_path(incident) %>">
                          <h3>
                            <% if !incident.contact.nil? %>
                              <%= incident.contact.name %>
                            |
                            <% end %>
                            <%= incident.incident_type %>
                            <span class="pull-right">
                            <% if incident.resolved %>
                              <span class="label label-success"><i class="fa fa-check"></i></span>
                            <% else %>
                              <span class="label label-danger"><i class="fa fa-remove"></i></span>
                            <% end %>
                            </span>
                          </h3>
                          <!-- <div class="progress xs">
                            <div class="progress-bar progress-bar-aqua" style="width: 20%" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100">
                              <span class="sr-only">20% Complete</span>
                            </div>
                          </div> -->
                        </a>
                      </li>
                    <% end %>
                  </ul>
                </li>
                <li class="footer">
                  <a href="<%= incidents_path %>">View all incidents</a>
                </li>
              </ul>
            </li>
            <!-- <li class="form-search">
              <input type="text" class="form-control" placeholder="Search..">
            </li> -->
            
          </ul>
        </div>
        <div class="navbar-right">
          <ul class="nav navbar-nav">
          <li id="nav-link">
              
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= image_tag current_user.photo.url, class: "img-circle", style: "width: 25px;" %>
                <strong>@<%= current_user.name.split(" ")[0] %></strong>
              </a>
              <ul class="dropdown-menu dropdown-login">
                <li>
                  <div class="navbar-login">
                    <div class="row">
                      <div class="col-lg-3">
                        <p class="text-center">
                          <img src="img/contact.jpg" class="img-responsive img-circle">
                        </p>
                      </div>
                      <div class="col-lg-9">
                        <p class="text-left"><strong><%= current_user.name %></strong></p>
                        <p class="text-left small"><%= current_user.email %></p>
                        <div class="row">
                          <div class="col-md-6">
                            <small><%= link_to 'Edit Profile', edit_user_registration_path %></small>
                          </div>
                          <div class="col-md-6">
                            
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </li>
                <li class="divider"></li>
                <li>
                  <div class="navbar-login navbar-login-session">
                    <%= link_to 'Logout', destroy_user_session_path, :method=>'delete', class: "btn btn-default btn-square btn-block" %>
                  </div>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>