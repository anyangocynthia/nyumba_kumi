<body>
  <div id="wrapper">
    <!-- SIDEBAR -->
    <div id="sidebar">
      <!-- logo -->
      <a href="index.html"><img src="/assets/logo.png" width="250" alt="Left template" id="logo" /></a>
            
      <!-- search -->
      <form  method="get" id="searchform" action="/blog">
        <div>
          <input type="text" value="Search..." name="query" id="s" onfocus="defaultInput(this)" onblur="clearInput(this)" />
          <input type="submit" id="searchsubmit" value=" " />
        </div>
      </form>
      <!-- ENDS search -->
            
      <!-- Navigation -->
      <ul id="nav" class="sf-menu sf-vertical">
        <li><%= link_to "HOME", "/blog" %></li>
        <% Category.all.each do |c| %>
          <li><%= link_to c.name, "/blog?category=#{c.name}" %></li>
        <% end %>
      </ul>
