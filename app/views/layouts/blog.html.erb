        <li><a href="http://www.youtube.com" class="youtube" title="View our videos"></a></li>
      </ul>
      <!-- ENDS Social -->

    </div>
    <!-- ENDS SIDEBAR -->

    <!-- MAIN -->
    <div id="main">
      <%= yield %>
    </div>
    <!-- ENDS MAIN -->
  </div>
